            fx:controller="sample.SampleController">
 <center>
  <VBox spacing="8.0">
   <padding>
    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
   </padding>
   <children>
    <Button fx:id="button" text="クリック" onAction="#onActionButton"/>
    <Label fx:id="label" />
   </children>
  </VBox>
 </center>
</BorderPane>
